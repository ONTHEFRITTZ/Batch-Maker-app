{
  "expo": {
    "name": "Batch Maker",
    "slug": "batch-maker",
    "scheme": "batchmaker",
    "version": "2.0.0",
    "orientation": "portrait",
    "platforms": [
      "ios",
      "android",
      "web"
    ],
    "sdkVersion": "54.0.0",
    "jsEngine": "hermes",
    "icon": "./app/assets/images/adaptive-icon.png",
    "splash": {
      "image": "./app/assets/images/batch-maker-alpha.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "android": {
      "permissions": ["android.permission.RECORD_AUDIO"],
      "package": "com.batchmaker.app",
      "adaptiveIcon": {
        "foregroundImage": "./app/assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "https",
              "host": "*.batchmaker.app",
              "pathPrefix": "/auth/callback"
            },
            {
              "scheme": "batchmaker"
            }
          ],
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ]
        }
      ]
    },
    "ios": {
      "bundleIdentifier": "com.batchmaker.app",
      "associatedDomains": [
        "applinks:batchmaker.app",
        "applinks:*.batchmaker.app"
      ],
      "infoPlist": {
        "CFBundleURLTypes": [
          {
            "CFBundleURLSchemes": [
              "batchmaker"
            ]
          }
        ],
        "NSMicrophoneUsageDescription": "This app uses the microphone for voice commands.",
        "NSSpeechRecognitionUsageDescription": "This app uses speech recognition for hands-free operation."
      }
    },
    "web": {
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      [
        "expo-speech-recognition",
        {
          "microphonePermission": "Allow Batch Maker to use your microphone for voice commands.",
          "speechRecognitionPermission": "Allow Batch Maker to recognize your voice commands."
        }
      ],
      "expo-build-properties"
    ],
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "221ac77d-8696-45c2-8466-d710dc857ab6"
      }
    },
    "owner": "onthefrittz"
  }
}